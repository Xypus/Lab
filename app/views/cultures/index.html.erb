<div class="container">
  <div class="row">
    <div class="col-md-8">      
      <table class="table table-striped table-bordered table-condensed">
        <thead>
          <tr>
            <th>Numer myszy</th>
            <th>Data rozpoczęcia hodowli</th>
            <th colspan="1"></th>
          </tr>
        </thead>

        <tbody>
          <% @cultures.each do |culture| %>
            <tr>
              <td><% culture.mice.each do |m|%>
                  <%= m.number %> 
                  <% end %></td>
              <td><%= culture.starting_date %></td>
              <td><%= link_to 'Szczegóły', culture, class: "btn btn-info btn-xs" %>
                  <%= link_to 'Edytuj', edit_culture_path(culture), class: "btn btn-warning btn-xs" %>
                  <%= link_to 'Usuń', culture, method: :delete, data: { confirm: 'Na pewno usunąć?' }, class: "btn btn-danger btn-xs"  %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<br>

<%= link_to 'Nowa hodowla', new_culture_path, class: "btn btn-primary btn-sm" %>
