<%= simple_form_for @culture do |f| %>
<%= f.association :mice, label_method: :number, value_method: :id, label: "Numery myszy", hint: "Wciśnij ctrl, aby wybrać więcej niż jedną mysz", :input_html => { :multiple => true } %>
<%= f.input :starting_date, label: "Data rozpoczęcia" %>
<%= f.input :termination_date, label: "Data zakończenia" %>
<%= f.input :culture_details, label: "Warunki hodowli" %>

<%= f.button :submit, "Zapisz hodowlę", class: "btn btn-info btn-xs" %>
<% end %>

