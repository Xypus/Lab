<%= simple_form_for @staining do |f| %>
<%= f.association :mice, label_method: :number, label_value: :id, label: "Myszy" %>
<%= f.input       :foetus, label: "Zarodek" %>
<%= f.input       :staining_date, label: "Data barwienia" %>
<%= f.input       :material_preparation,  
        label: "Przygotowanie materiału", 
        as: :text,  
        input_html: {rows: 5} %>
<table class="table table-striped table-bordered">
  <tbody>
    <tr>
      <%= f.simple_fields_for @plate do |p| %>
      <td rowspan="2"><%= p.input :plate_number, label: "Numer płytki" %></td>
      <td><%= p.input :p1, label: "p1" %></td>
      <td><%= p.input :p2, label: "p2" %></td>
      <td><%= p.input :p3, label: "p3" %></td>
      <td><%= p.input :p4, label: "p4" %></td>
    </tr>
    <tr>
      <td><%= p.input :p5, label: "p5" %></td>
      <td><%= p.input :p6, label: "p6" %></td>
      <td><%= p.input :p7, label: "p7" %></td>
      <td><%= p.input :p8, label: "p8" %></td>
      <% end %>
    <tr>
  </tbody>
</table>
<%= f.association :protocol, label_method: :title, label: "Przeciwciała" %>
<%= f.input       :protocol_text, label: "Protokół", input_html: {rows: 10} %>
<%= f.input       :results, label: "Wyniki", as: :text, input_html: {rows: 10} %>
<%= f.input       :results_file, label: "Plik z wynikami" %>
<%= f.button      :submit, "Zapisz barwienie", class: "btn btn-info btn-xs" %>
<% end %>

<%= hidden_field_tag :protocols, @protocols.to_json %>
