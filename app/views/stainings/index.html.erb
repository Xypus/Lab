<div class="container">
  <div class="row">
    <div class="col-md-8">
      <table class="table table-striped table-bordered table-condensed">
        <thead>
          <tr>
            <th>Numer myszy</th>
            <th>Zarodek</th>
            <th>Data barwienia</th>
            <th>Przygotowanie materiału</th>
            <th>Przeciwciała</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @stainings.each do |staining| %>
            <tr>
              <td>
                <% staining.mice.each do |m| %>
                  <%= m.number %>
                <% end %>
              </td>
              <td><%= staining.foetus %></td>
              <td><%= staining.staining_date %></td>
              <td><%= staining.material_preparation %></td>
              <td><%= staining.protocol.title %></td>
              <td><%= link_to 'Szczegóły', staining, class: "btn btn-info btn-xs" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<br>

<%= link_to 'Nowe barwienie', new_staining_path, class: "btn btn-primary btn-sm" %>
