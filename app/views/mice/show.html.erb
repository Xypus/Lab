<p id="notice"><%= notice %></p>
<div class="container">
  <div class="row">
    <div class="col-md-8">
      <table class="table table-striped table-bordered">
        <tbody>
          <tr>
            <td><strong>Numer myszy:</strong></td>
            <td><%= @mouse.number %></td>
          </tr>
          <tr>
            <td><strong>Data krycia:</strong></td>
            <td><%= @mouse.mating_date %></td>
          </tr>
          <tr>
            <td><strong>DPC:</strong></td>
            <td><%= @mouse.dpc %></td>
          </tr>
          <tr>
            <td><strong>Somity:</strong></td>
            <td><%= @mouse.somites %></td>
          </tr>
          <tr>
            <td><strong>Doświadczenia:</strong></td>
            <td>
              <table class="table table-striped table-bordered">
                <tr>
                  <td><strong>Barwienia</strong></td>
                  <td>Przeciwciała</td>
                  <td><strong>Hodowla</strong></td>
                </tr>
                <tr>
                <td>
                  <% @mouse.stainings.each do |s| %>
                    <%= link_if(s) %>&nbsp;<br />
                </td>
                <td><%= s.protocol.title %>&nbsp;</td>
                <% end %>                
                <td><%= link_if(@mouse.culture) %>&nbsp;</td>
                </tr>
              </table>
            </td>
          </tr>
          <tr>
            <td><strong>Uwagi:</strong></td>
            <td><%= @mouse.notes %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
  

<%= link_to 'Edytuj', edit_mouse_path(@mouse), class: "btn btn-warning btn-sm" %>
<%= link_to 'Usuń', @mouse, method: :delete, data: { confirm: 'Czy na pewno?' }, class: "btn btn-danger btn-sm" %>
<%= link_to 'Wróć', mice_path, class: "btn btn-info btn-sm" %>
