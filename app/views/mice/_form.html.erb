<p><strong>Pola oznaczone gwiazdką są wymagane.</strong></p>
<%= simple_form_for @mouse do |f| %>
<%= f.input :number, label: "Numer myszy" %>
<%= f.input :mating_date, label: "Data krycia" %>
<%= f.input :dpc, label: "DPC" %>
<%= f.input :somites, label: "Somity" %>
<%= f.input :experiments, label: "Doświadczenia" %>
<%= f.input :notes, label: "Uwagi", as: :text %>
<%= f.button :submit, "Zapisz mysz", class: "btn btn-info btn-xs" %>
<% end %>
